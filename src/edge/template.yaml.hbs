AWSTemplateFormatVersion: "2010-09-09"
Description: "{{name}} ({{environment}})"
Resources:
  CustomDomainCF:
    Type: "AWS::CloudFront::Distribution"
    Properties:
      DistributionConfig:
        Aliases:
        {{#each aliases}}
          - '{{{domain}}}'
        {{/each}}
        Comment: {{description}}
        DefaultCacheBehavior:
          AllowedMethods: ["DELETE", "GET", "HEAD", "OPTIONS", "PATCH", "POST", "PUT"]
          CachedMethods: ["GET", "HEAD", "OPTIONS"]
          Compress: false
          MinTTL: {{cache.ttl.min}}
          MaxTTL: {{cache.ttl.max}}
          DefaultTTL: {{cache.ttl.default}}
          ForwardedValues:
            Cookies:
              Forward: "all"
            Headers:
              - "Accept"
              - "Accept-Encoding"
              - "Access-Control-Request-Headers"
              - "Access-Control-Request-Method"
              - "Authorization"
              - "Host"
            QueryString: true
            QueryStringCacheKeys: ["*"]
          SmoothStreaming: false
          TargetOriginId: {{{origins.[0]}}}
          ViewerProtocolPolicy: redirect-to-https
          LambdaFunctionAssociations:
            {{#each handlers}}
            - EventType: {{event}}
              IncludeBody: {{includesBody}}
              LambdaFunctionARN: {{arn}}
            {{/each}}

        DefaultRootObject: ""
        Enabled: true
        HttpVersion: http2
        IPV6Enabled: false
        Origins:
          {{#each origins}}
          - Id: {{{.}}}
            DomainName: {{{.}}}
            CustomOriginConfig:
              HTTPSPort: 443
              OriginKeepaliveTimeout: 60
              OriginProtocolPolicy: "https-only"
              OriginReadTimeout: 60
              OriginSSLProtocols: [ "TLSv1.2" ]
          {{/each}}
        PriceClass: PriceClass_{{cache.[price-class]}}
        ViewerCertificate:
          AcmCertificateArn: {{cache.certificate}}
          MinimumProtocolVersion: "TLSv1.2_2021"
          SslSupportMethod: "sni-only"
      Tags:
        - Key: component
          Value: {{namespace}}
        - Key: environment
          Value: {{environment}}

  {{#if dns}}
  {{#each dns}}
  RecordSet{{name}}:
    Type: "AWS::Route53::RecordSetGroup"
    DependsOn:
      - "CustomDomainCF"
    Properties:
      Comment: "{{name}} alias for {{this.name}} ({{this.environment}})"
      HostedZoneId: {{{zone}}}
      RecordSets:
        {{#each aliases}}
        - Name: '{{{.}}}.'
          Type: A
          AliasTarget:
            DNSName: !GetAtt [ CustomDomainCF, "DomainName" ]
            EvaluateTargetHealth: false
            HostedZoneId: Z2FDTNDATAQYW2
        {{/each}}
  {{/each}}
  {{/if}}

Outputs:
  CloudFrontDistributions:
    Value: !Ref CustomDomainCF
